<launch>
  <!-- start gazebo server-->
  <!-- to start the server paused, include a -u flag -->
  <node name="gazebo" pkg="gazebo_ros" type="gzserver" respawn="false" output="screen"
	args="$(find unball)/simulator/ieee_very_small_field.world" />
	
  <!-- start gazebo client -->
  <node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" respawn="false" output="screen" />
  
  <!-- spawn robots -->
  <node name="robot_1" pkg="gazebo_ros" type="spawn_model"
  args="-file $(find unball)/simulator/unball_robot.sdf -sdf -x 0.37 -y 0.40 -z 1 -model robot_1" />
  
  <node name="robot_2" pkg="gazebo_ros" type="spawn_model"
  args="-file $(find unball)/simulator/unball_robot.sdf -sdf -x 0.37 -y -0.40 -z 1 -model robot_2" />
  
  <node name="robot_3" pkg="gazebo_ros" type="spawn_model"
  args="-file $(find unball)/simulator/unball_robot.sdf -sdf -x 0.60 -y 0 -z 1 -model robot_3" />
  
  <node name="robot_4" pkg="gazebo_ros" type="spawn_model"
  args="-file $(find unball)/simulator/unball_robot.sdf -sdf -x -0.37 -y 0.40 -z 1 -model robot_4" />
  
  <node name="robot_5" pkg="gazebo_ros" type="spawn_model"
  args="-file $(find unball)/simulator/unball_robot.sdf -sdf -x -0.37 -y -0.40 -z 1 -model robot_5" />
  
  <node name="robot_6" pkg="gazebo_ros" type="spawn_model"
  args="-file $(find unball)/simulator/unball_robot.sdf -sdf -x -0.60 -y 0 -z 1 -model robot_6" />
</launch>
