<?xml version='1.0'?>
<sdf version='1.4'>
  <model name="unball_robot">  
    <static>false</static>

    <link name='unball_robot_chassis'>
      <gravity>true</gravity>
      <self_collide>true</self_collide>
      <kinematic>false</kinematic>
      <velocity_decay>
        <linear>0.1</linear>
        <angular>0.1</angular>
      </velocity_decay>
      <inertial>
        <mass>0.200</mass>
        <pose>0 0 -0.05 0 0 0</pose>
        <inertia>
          <ixx>1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1</iyy>
          <iyz>0</iyz>
          <izz>1</izz>
        </inertia>
      </inertial>
      <pose>0 0 .1 0 0 0</pose>
      <collision name='collision'>
        <geometry>
          <box>
            <size>.075 .075 .075</size>
          </box>
        </geometry>
      </collision>
      <visual name='visual'>
        <geometry>
          <box>
            <size>.075 .075 .075</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
    </link>     
    
    <link name="left_wheel">
      <velocity_decay>
        <linear>0.1</linear>
        <angular>0.1</angular>
      </velocity_decay>
      <inertial>
        <mass>0.100</mass>
        <inertia>
          <ixx>1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1</iyy>
          <iyz>0</iyz>
          <izz>1</izz>
        </inertia>
      </inertial>
      <pose>0 0.0375 0.08 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.0375</radius>
            <length>.01</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>.0375</radius>
            <length>.01</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/White</name>
          </script>
        </material>
      </visual>
    </link>

    <link name="right_wheel">
      <velocity_decay>
        <linear>0.1</linear>
        <angular>0.1</angular>
      </velocity_decay>
      <inertial>
        <mass>0.100</mass>
        <inertia>
          <ixx>1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1</iyy>
          <iyz>0</iyz>
          <izz>1</izz>
        </inertia>
      </inertial>
      <pose>0 -0.0375 0.08 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.0375</radius>
            <length>.01</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>.0375</radius>
            <length>.01</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/White</name>
          </script>
        </material>
      </visual>
    </link>

    <joint type="revolute" name="unball_robot_left_wheel_joint">
      <pose>0 0 0 0 0 0</pose>
      <child>left_wheel</child>
      <parent>unball_robot_chassis</parent>
      <axis>
        <xyz>0.0 1.0 0.0</xyz>
        <limit>
          <lower>-100</lower>
          <upper>100</upper>
          <effort>1000</effort>
          <velocity>1000</velocity>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>0.0</friction>
        </dynamics>
      </axis>
      <physics>
        <ode>
          <cfm>0.2</cfm>
          <bounce>0.0</bounce>
          <max_force>1000.0</max_force>
          <velocity>0.0</velocity>
          <fudge_factor>0.0</fudge_factor>
          <limit>
            <cfm>0</cfm>
            <erp>0.1</erp>
          </limit>
          <suspension>
            <cfm>0</cfm>
            <erp>0.2</erp>
          </suspension>
        </ode>
      </physics>
    </joint>

    <joint type="revolute" name="unball_robot_right_wheel_joint">
      <pose>0 0 0 0 0 0</pose>
      <child>right_wheel</child>
      <parent>unball_robot_chassis</parent>
      <axis>
        <xyz>0.0 1.0 0.0</xyz>
        <limit>
          <lower>-100</lower>
          <upper>100</upper>
          <effort>1000</effort>
          <velocity>1000</velocity>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>0.0</friction>
        </dynamics>
      </axis>
      <physics>
        <ode>
          <cfm>0.2</cfm>
          <bounce>0.0</bounce>
          <max_force>1000.0</max_force>
          <velocity>0.0</velocity>
          <fudge_factor>0.0</fudge_factor>
          <limit>
            <cfm>0</cfm>
            <erp>0.1</erp>
          </limit>
          <suspension>
            <cfm>0</cfm>
            <erp>0.2</erp>
          </suspension>
        </ode>
      </physics>
    </joint>
    
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>1000</updateRate>
      <leftJoint>unball_robot_left_wheel_joint</leftJoint>
      <rightJoint>unball_robot_right_wheel_joint</rightJoint>
      <wheelSeparation>0.075</wheelSeparation>
      <wheelDiameter>0.08</wheelDiameter>
      <torque>100</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>unball_robot_chassis</robotBaseFrame>
    </plugin>
  </model>
</sdf>
